<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Finance Tracker Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #e0f7fa;
        }
        h1 {
            text-align: center;
            margin-top: 20px;
            color: #00796b;
        }
        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0,0,0,0.2);
        }
        form {
            margin: 20px 0;
            padding: 20px;
            border: 1px solid #b2dfdb;
            border-radius: 12px;
            background: #e0f2f1;
        }
        label {
            display: block;
            margin-bottom: 8px;
            color: #00796b;
            font-weight: bold;
        }
        input[type="text"],
        input[type="number"],
        input[type="date"],
        select {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #00796b;
            border-radius: 8px;
            box-sizing: border-box;
            background: #ffffff;
        }
        button {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            background-color: #00796b;
            color: white;
            cursor: pointer;
            font-size: 16px;
        }
        button:hover {
            background-color: #004d40;
        }
        a {
            display: inline-block;
            margin: 10px 0;
            color: #00796b;
            text-decoration: none;
            font-size: 16px;
        }
        a:hover {
            text-decoration: underline;
        }
        .transactions-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        .transactions-table th,
        .transactions-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #b2dfdb;
        }
        .transactions-table th {
            background-color: #004d40;
            color: #ffffff;
        }
        .logout-button {
            text-align: center;
        }
        .profile-container {
            text-align: center;
            margin-bottom: 20px;
        }
        .profile-icon {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
        }
        .summary {
            margin-top: 20px;
            padding: 20px;
            background: #ffffff;
            border: 1px solid #b2dfdb;
            border-radius: 12px;
            text-align: center;
        }
        .summary h2 {
            margin-bottom: 20px;
            color: #00796b;
        }
        .summary p {
            font-size: 18px;
            color: #004d40;
            margin: 5px 0;
        }
        @media (max-width: 768px) {
            .container {
                padding: 10px;
            }
            .transactions-table th, .transactions-table td {
                font-size: 14px;
                padding: 8px;
            }
            .summary p {
                font-size: 16px;
            }
        }
        @media (max-width: 480px) {
            button {
                width: 100%;
                font-size: 14px;
            }
            input[type="text"],
            input[type="number"],
            input[type="date"],
            select {
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <h1>Finance Tracker Dashboard</h1>
    <div class="container">
        <div class="profile-container">
            <a href="/profile">
                <img src="https://cdn.pixabay.com/photo/2020/07/01/12/58/icon-5359553_640.png" alt="Profile Icon" class="profile-icon">
            </a>
            <h2>Welcome, <%= user.username %>!</h2>
        </div>

        <form action="/add-transaction" method="POST">
            <h2>Add Transaction</h2>
            <label for="description">Description:</label>
            <input type="text" id="description" name="description" required>

            <label for="type">Type:</label>
            <select id="type" name="type">
                <option value="Expense">Expense</option>
                <option value="Income">Income</option>
            </select>

            <label for="date">Date:</label>
            <input type="date" id="date" name="date" required>

            <label for="amount">Amount:</label>
            <input type="number" id="amount" name="amount" step="0.01" required>
<br>
            <button type="submit">Add Transaction</button>
        </form>

        <form action="/search-transactions" method="POST">
            <h2>Search Transactions</h2>
            <label for="month">Month:</label>
            <input type="number" id="month" name="month" min="1" max="12" required>

            <label for="year">Year:</label>
            <input type="number" id="year" name="year" required>
<br>
            <button type="submit">Search Transactions</button>
        </form>

        <a href="/main">View All Transactions</a>
        <a href="/download-pdf">Download PDF Report</a>
        <a href="/download-excel">Download Excel Report</a>

        <!-- Logout Button -->
        <form action="/logout" method="GET" class="logout-button">
            <button type="submit">Logout</button>
        </form>

        <!-- Display Transactions -->
        <% if (user.transactions && user.transactions.length > 0) { %>
            <h2>All Transactions</h2>
            <table class="transactions-table">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Type</th>
                        <th>Date</th>
                        <th>Amount</th>
                        
                    </tr>
                </thead>
                <tbody>
                    <% user.transactions.forEach(transaction => { %>
                    <tr>
                        <td><%= transaction.description %></td>
                        <td><%= transaction.type %></td>
                        <td><%= new Date(transaction.date).toLocaleDateString() %></td>
                        <td><%= transaction.amount.toFixed(2) %></td>
                        
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } else { %>
            <p>No transactions found.</p>
            <% } %>

        <!-- Summary Section -->
        <div class="summary">
            <h2>Summary</h2>
            <p>Total Income: <%= totalIncome.toFixed(2) %></p>
            <p>Total Expenses: <%= totalExpenses.toFixed(2) %></p>
            <p>Net Balance: <%= netBalance.toFixed(2) %></p>
        </div>
    </div>
</body>
</html>
